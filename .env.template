# The Agent AI Architect - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ==================== API KEYS ====================
# OpenAI API Key (Required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (Required for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Tavily API Key (Required for web search functionality)
TAVILY_API_KEY=your_tavily_api_key_here

# ==================== LANGSMITH OBSERVABILITY ====================
# LangSmith for monitoring and debugging (Optional but recommended)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=agent-ai-architect
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ==================== ENVIRONMENT SETTINGS ====================
# Environment type
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Logging level
LOG_LEVEL=INFO

# ==================== AGENT CONFIGURATION ====================
# Default model settings
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002

# Agent behavior settings
MAX_ITERATIONS=10
TIMEOUT_SECONDS=300

# ==================== DATABASE SETTINGS ====================
# Vector database settings (if using persistent storage)
CHROMA_PERSIST_DIR=./data/chroma_db
VECTOR_STORE_TYPE=chroma

# ==================== SECURITY SETTINGS ====================
# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# Content filtering
CONTENT_FILTER_ENABLED=true

# ==================== DEVELOPMENT SETTINGS ====================
# Auto-reload for development
AUTO_RELOAD=true

# Verbose output for debugging
VERBOSE=true